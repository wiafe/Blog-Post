.fix-share
	position fixed
	left 92px
.social
	position absolute
	left 92px
	margin 21px 0 0 0
	text-transform uppercase
	font-size 12px
	font-family "Proxima-Nova"
	width 66px
		
	.links
		@media (max-width: 578px and 950px)
			margin-top 10px
	p
		text-align center
		color $light-gray

	a
		height 66px
		width 66px
		border 1px solid $light-gray
		border-top 0
		margin-top -4px
		display inline-block
		
		&:hover
			background-color $light-gray
			transition: all .3s ease-in 50ms;
		
		img
			display block
			margin 23px auto
			
	@media (max-width: 578px and 950px)
		display block
		position relative
		margin 0 auto
		width 277px
		left 0
		
		a
			border 1px solid $light-gray
			
	
	


	.facebook
		border-top 1px solid $light-gray
	
	.dots
		background-image url(../images/dots.png)
		background-position center
		background-size contain
		background-repeat no-repeat
		padding 1px
		cursor pointer